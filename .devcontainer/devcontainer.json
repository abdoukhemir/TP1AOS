{
    "name": "Python PostgreSQL SQLAlchemy",
    "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
    
    "features": {
        "ghcr.io/devcontainers/features/postgresql:1": {
            "version": "15"
        }
    },
    
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance"
            ]
        }
    },
    
    "postCreateCommand": "pip install --upgrade pip && pip install sqlalchemy psycopg2-binary python-dotenv",
    
    "forwardPorts": [5432]
}
